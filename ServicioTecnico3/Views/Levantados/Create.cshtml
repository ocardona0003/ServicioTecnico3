                        </thead>
                        <tbody id="SetDataModalBuscaUsuario">
                            <!--Listado-->
                        </tbody>
                    </table>
                </form>
            </div>
            <div class="modal-footer">
                <input type="button" data-dismiss="modal" class="btn btn-primary" value="Salir" />
